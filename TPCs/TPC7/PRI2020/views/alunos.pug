extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h3.w3-left Lista de Alunos (PRI 2020)
      if lista.length > 0
        .w3-container 
          table.w3-table-all
            tr 
              th Número
              th Nome 
              th Git
            each a in lista
              tr
                td
                    a(href="/alunos/"+a._id)=a.Número
                td= a.Nome
                td= a.Git
                td= a.tpc
                td
                  a(href="/alunos/editar/:"+a._id, class="w3-button w3-khaki w3-round-small") Editar
                  a(href="/alunos/delete/:"+a._id, class="w3-button w3-deep-orange w3-round-small") Apagar
      else
        .w3-container
          p Ainda não há alunos registados
      footer.w3-container.w3-teal
        address Gerado por Diogo Pereira :: 2020-Novembro

  
