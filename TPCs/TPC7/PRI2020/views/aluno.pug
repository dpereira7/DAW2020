extends layout



block content
    .w3-card-4
        header.w3-container.w3-teal
            h3 Ficha Aluno: #{aluno.Nome}
        .w3-container
            table(class="w3-table-all")
                tr
                    th Número
                        td=aluno.Número
                tr
                    th Nome
                        td=aluno.Nome
                tr
                    th Git
                        td
                            a(href=aluno.Git)= aluno.Git
                tr  
                    th TPC
                        td= aluno.tpc
        footer(class="w3-container w3-teal")
                adress Gerado por Diogo Pereira :: 2020-Novembro
                br
                a(href="/alunos") Voltar             
