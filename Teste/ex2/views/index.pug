extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h3.w3-center CLAV 
            h5.w3-center Classificação e Avaliação da Informação Pública
        if classes.length > 0
            .w3-container
                table(class="w3-table-all")
                    tr
                        th Título
                        th Código
                    each c in classes
                        tr
                            td= c.titulo
                            td
                                a(href="/classes/c"+c.codigo)= c.codigo
        else
            div(class="w3-container")
                p Ainda não estão disponíveis Classes de nível 1.
        footer(class="w3-container w3-teal")
            adress.w3-right Diogo Pereira-18/01/21
            a(href="javascript:history.back()") Voltar
            adreess /
            a(href="/") Home
